/* pages/sign-in/sign-in.wxss */
#container{
  display: flex;
  justify-content: center;
  width: 100%;
}
#head{
  margin-top: 5%;
  width: 95%;
  height: 200px;
  border-radius: 3px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 5px rgba(0, 0, 0, 0.1) inset;
  position: relative;
}
#head_img{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin: 0 auto;
  width: 95%;
  top: 50%;
  margin-top: -90px;
}
#head_img image{
  width: 100%;
  height: 180px;
}
#content{
  width: 100%;
  position: relative;
}
#card{  
  margin-top: 5%;
  position: relative;
}
#btn_{
  display: flex;
  justify-content: center;
  margin-top: 5%;
}
#signIn,#signUp{
  width: 50%;
}
