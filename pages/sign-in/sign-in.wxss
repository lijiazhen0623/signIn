#sin{
  background-color: #68a4d8;  
  border-color: #357ebd;  
  color: #fff; 
  font-weight: 330;
}
#sup{
  /* background-color: #428bca;   */
  border-color: #fff; 
  color: black;
  font-weight: 330;
}

#footer{
  width: 100%;
  margin-top: 10%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: relative;
}
.footer_content{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
  font-weight: 500;
  font-size: 80%;
}
#main{
  z-index: -1;
  position: absolute;
  width: 100%;
}
#mask{
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;

}
#login{
  background-color:#fff;
  opacity: 1;
  width: 70%;
  margin: 0 auto;
  margin-top: 50%;
  position: relative;
  border-radius: 3px 3px;
  box-shadow: 5px 3px 10px rgba(0, 0, 0, 0.3), 0 0 5px rgba(0, 0, 0, 0.1) inset;
}
#login_head{
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid gray;
  font-size: large;
  height: 30px;
  /* font-weight: 400; */
}
#login_content{
  /* border-bottom: 1px solid gray; */
}
#login_footer{
  display: flex;
  justify-content: center;
}
.login_btn{
  width: 50%;
}